<!-- Content -->
<div class="w-full pt-10 px-4 sm:px-6 md:px-8 lg:pl-72">
  <h1 class="block text-2xl font-bold text-gray-800 sm:text-3xl text-center mb-8">My Wallet</h1>

  <div class="grid md:grid-cols-2 xl:grid-cols-3 gap-4 mb-12 w-[90%] mx-auto px-10 py-12 bg-neutral-300 rounded-2xl">
    <% @wallets.each do |wallet| %>
      <div class="bg-slate-200 p-8 rounded-lg shadow-md shadow-slate-500">
        <p class="text-gray-500 font-thin text-sm border-dotted border-b border-slate-800 pb-2 text-right pr-2">
          Wallet <%= wallet["id"] %>    
        </p>
        <h4 class="pt-2">
          <span class="font-bold text-lg">Balance:</span>
          <span class="text-md pl-4"><%= wallet["balance"] %></span>
        </h4>
        <h4>
          <span class="font-bold text-lg">Currency:</span>
          <span class="text-md pl-4"><%= wallet["currency"] %></span>
        </h4>
      </div>
    <% end %>
  </div>
</div>
<!-- End Content -->
