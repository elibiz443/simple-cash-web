<!-- Content -->
<div class="w-full pt-10 px-4 sm:px-6 md:px-8 lg:pl-72">
  <h1 class="block text-2xl font-bold text-gray-800 sm:text-3xl text-center mb-12">Get Transactions Report!</h1>
  <!-- Form -->
  <%= form_with(model: @report, url: reports_path) do |f| %>
    <% flash.each do |type, msg| %>
      <div class="text-center w-[70%] mx-auto mb-2">
        <%= content_tag :div, msg, class: build_alert_classes(type) %>
      </div>
    <% end %>
    <label class="block text-sm font-medium text-gray-500 text-center mb-2">(Select Start Date & End Date!)</label>
    <div class="mx-auto max-w-2xl sm:flex sm:space-x-3 p-3 bg-white border rounded-lg shadow-lg shadow-gray-100">
      <div class="pb-2 sm:pb-0 sm:flex-[1_0_0%]">
        <%= f.datetime_local_field :start_date, class: "py-3 px-4 block w-full border-transparent rounded-md text-sm focus:border-blue-500 focus:ring-blue-500 sm:p-4", value: (Time.zone.now - 20.days).strftime("%Y-%m-%d %H:%M"), min: (Time.zone.now - 120.days).strftime("%Y-%m-%d %H:%M"), max: (Time.zone.now - 8.days).strftime("%Y-%m-%d %H:%M"), id: "datetime-input", step: "any" %>
      </div>
      <div class="pt-2 sm:pt-0 sm:pl-3 border-t border-gray-200 sm:border-t-0 sm:border-l sm:flex-[1_0_0%]">
        <%= f.datetime_local_field :end_date, class: "py-3 px-4 block w-full border-transparent rounded-md text-sm focus:border-blue-500 focus:ring-blue-500 sm:p-4", value: (Time.zone.now).strftime("%Y-%m-%d %H:%M"), min: (Time.zone.now - 7.days).strftime("%Y-%m-%d %H:%M"), max: (Time.zone.now).strftime("%Y-%m-%d %H:%M"), id: "datetime-input", step: "any" %>
      </div>
      <div class="pt-2 sm:pt-0 grid sm:block sm:flex-[0_0_auto]">
        <button type="submit" class="py-3 px-4 inline-flex justify-center items-center gap-2 rounded-md border border-transparent font-semibold bg-blue-500 text-white hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-all text-sm sm:p-4">
          Request Report!
        </button>
      </div>
    </div>
  <% end %>
  <!-- End Form -->
</div>
<!-- End Content -->
